<UserControl x:Class="CsaladfaKutatoApp.KapcsolodoSzemelyLetrehozControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CsaladfaKutatoApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="242">

    <StackPanel PreviewMouseDown="Panel_PreviewMouseDown" Background="#EEE">
        <WrapPanel Margin="0,0,0,10">
            <TextBlock Text="Keresztnév" FontWeight="Bold" FontSize="14" Width="80"/>
            <Button>Töröl</Button>
            <Button>Előző</Button>
            <Button Width="73">Következő</Button>
        </WrapPanel>
        <WrapPanel Height="19" Margin="0,0,0,10">
            <TextBlock x:Name="KapcsolodoSzemelyTextBlock" Width="120" Margin="0,0,10,0" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock Margin="0,0,5,0" FontWeight="Bold">hozzáadása</TextBlock>
        </WrapPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                
                
                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="121"/>
                <ColumnDefinition Width="121"/>
            </Grid.ColumnDefinitions>
           
             <StackPanel Grid.Row="0" Grid.Column="0">
                <TextBlock Margin="10,0,0,5">Neme:</TextBlock>
                <WrapPanel Margin="10,0,0,0">
                    <RadioButton Name="FerfiRadioButton" Margin="0,0,10,0" Background="Transparent">
                        Férfi
                    </RadioButton>
                    <RadioButton Name="NoRadioButton" Margin="0,0,5,0"  Background="Transparent">
                        Nő
                    </RadioButton>
                </WrapPanel>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1">
                <TextBlock Margin="30,0,0,5">Élő személy?</TextBlock>
                <CheckBox Name ="EloSzemelyCheckBox" Margin="30,0,0,0" Checked="EloSzemelyCheckBox_Checked" Unchecked="EloSzemelyCheckBox_Unchecked">
                    Igen
                </CheckBox>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0">
                <TextBlock Text="Keresztnév:" VerticalAlignment="Center" Margin="5,0,0,5"/>
                <TextBox Name="KeresztnevTextBox" Height="15" Width="111"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Vezetéknév:" VerticalAlignment="Center" Margin="5,0,0,5"/>
                <TextBox Name="VezeteknevTextBox" Height="15" Width="111"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0">
                <TextBlock Text="Születési dátum:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox Name="SzuletesiDatumTextBox" Margin="0,5" Height="15" Width="111"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="1">
                <TextBlock Text="Születési hely:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox Name="SzuletesiHelyTextBox" Margin="5" Height="15" Width="111"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="0">
                <TextBlock Text="Halál dátuma:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox Name="HalalDatumTextBox" Margin="0,5" Height="15" Width="111"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="1">
                <TextBlock Text="Halál helye:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox Name="HalalhelyTextBox" Margin="5"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.Column="0">
                <TextBlock  Text="Örök nyugalom helye:" VerticalAlignment="Center" Margin="2,0,0,0"/>
                <TextBox Name="OrokNyugalomHelyeTextBox" Margin="5" Height="15" Width="111" />
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.Column="1">
                <TextBlock  Text="Foglalkozása:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox  Name="FoglalkozasaTextBox" Margin="5" Height="15" Width="111"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="0">
                <TextBlock Text="Tanulmányai:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox  Name="TanulmanyaiTextBox" Margin="5" Height="15" Width="111"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="1">
                <TextBlock  Text="Vallása:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox  Name="VallasaTextBox" Margin="5"/>
            </StackPanel>
        </Grid>
        <TextBlock Name="HibaUzenetTextBlock" Margin="5"/>
        <WrapPanel>
            <Grid>
                <Button x:Name="InfoGomb" Content="ℹ️ Segítség" Click="Segitseg_Click" Margin="5,0,25,0"/>
                <Popup x:Name="BuborekPopup"
                       PlacementTarget="{Binding ElementName=InfoGomb}"
                       Placement="Top"
                       StaysOpen="True"
                       AllowsTransparency="True"
                       PopupAnimation="Slide">
                    <Border Background="LightYellow" BorderBrush="Gray" BorderThickness="1"
                            CornerRadius="10" Padding="10" Width="200">
                        <TextBlock Name="PopupUnezet" Text="" 
                            TextWrapping="Wrap"/>
                    </Border>
                </Popup>
            </Grid>
            <Button Content="Vissza" Click="Vissza_Click" Margin="0,0,10,0"/>
            <Button Content="Hozzáadás" Click="Hozzaadas_Click"/>
        </WrapPanel>
    </StackPanel>
</UserControl>
