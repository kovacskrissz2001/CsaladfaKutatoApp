<UserControl x:Class="CsaladfaKutatoApp.SzemelyKapcsolataiControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CsaladfaKutatoApp"
             mc:Ignorable="d" 
              d:DesignHeight="450" Width="275">


    <StackPanel PreviewMouseDown="Panel_PreviewMouseDown" Background="#EEE">

        <WrapPanel Margin="0,0,0,10">
            <TextBlock Text="{Binding KNev}" FontWeight="Bold" FontSize="14" Width="80" TextAlignment="Center"/>
            <Button Click="TorlesButton_Click">Töröl</Button>
            <Button Click="ElozoButton_Click">Előző</Button>
            <Button Click="KovetkezoButton_Click" Width="73">Következő</Button>
        </WrapPanel>
        <Grid Height="411">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="185"/>
            </Grid.ColumnDefinitions>


            <Label Content="Édesanya:" Grid.Row="0" Grid.Column="0"/>
            <TextBlock x:Name="AnyaMegjelenitTextBox"  Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" Height="15" Margin="0,10,0,0">
                <Run Text="{Binding Anya.VNev, Mode=OneWay}" />
                <Run Text=" " />
                <Run Text="{Binding Anya.KNev, Mode=OneWay}" />
            </TextBlock>
            <TextBlock Text="Nincs megjeleníthető személy."
           Grid.Row="0" Grid.Column="1"
           HorizontalAlignment="Left"
           VerticalAlignment="Bottom">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Anya}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Label Content="Édesapa:" Grid.Row="1" Grid.Column="0"/>
            <TextBlock x:Name="ApaMegjelenitTextBox" Grid.Row="1"  Grid.Column="1" VerticalAlignment="Bottom" Height="15">
                <Run Text="{Binding Apa.VNev, Mode=OneWay}" />
                <Run Text=" " />
                <Run Text="{Binding Apa.KNev, Mode=OneWay}" />
            </TextBlock>
            <TextBlock Text="Nincs megjeleníthető személy."
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" Grid.Row="1" Grid.Column="1" >
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Apa}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>


            <Label Content="Pár/Házastárs:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom"/>
            <TextBlock x:Name="ParMegjelenitTextBox" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Height="19" RenderTransformOrigin="0.5,0.5" Margin="0,6,0,0">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
                <Run Text="{Binding Parja.VNev, Mode=OneWay}" />
                <Run Text=" " />
                <Run Text="{Binding Parja.KNev, Mode=OneWay}" />
            </TextBlock>
            <TextBlock Text="Nincs megjeleníthető személy."
           HorizontalAlignment="Left"
           VerticalAlignment="Bottom" Grid.Row="2" Grid.Column="1" >
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Parja}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Label Content="Gyermekek:" Grid.Row="3" Grid.Column="0"/>
            <!-- Alapértelmezett szöveg, ha nincs adat -->
            <TextBlock Text="Nincs megjeleníthető személy." 
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" Grid.Row="3" Grid.Column="1" Height="21" RenderTransformOrigin="0.5,0.5" Width="180">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.263"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Gyermekei.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <ItemsControl ItemsSource="{Binding Gyermekei}" Grid.Row="4" Grid.Column="1">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                        <Run Text="{Binding VNev}" />
                        <Run Text=" " />
                        <Run Text="{Binding KNev}" />
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Label Content="Testvérek:" Grid.Row="5" Grid.Column="0"/>
            <!-- Alapértelmezett szöveg, ha nincs adat -->
            <TextBlock Text="Nincs megjeleníthető személy." Grid.Row="5" Grid.Column="1"
           HorizontalAlignment="Left"
           VerticalAlignment="Bottom" Height="20" Margin="0,0,0,130" Grid.RowSpan="2">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Testverek.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <ItemsControl ItemsSource="{Binding Testverek}" Grid.Row="6" Grid.Column="1">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                           <TextBlock>
                            <Run Text="{Binding VNev}" />
                            <Run Text=" " />
                            <Run Text="{Binding KNev}" />
                            </TextBlock>    
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Vissza" Grid.Row="7" Grid.Column="0" Width="89" Click="Vissza_Click"/>

        </Grid>







    </StackPanel>
</UserControl>
