<Page x:Class="CsaladfaKutatoApp.KozpontiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CsaladfaKutatoApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KozpontiPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- Bal oldali menüsáv -->
            <ColumnDefinition Width="*"/>
            <!-- Középső tartalom -->
            <ColumnDefinition Width="250"/>
            <!-- Jobb oldali panel -->
        </Grid.ColumnDefinitions>

        <!-- BAL oldali menü -->
        <StackPanel Grid.Column="0" Background="#EEE" Orientation="Vertical" Grid.RowSpan="3">
            <TextBlock Text="Menü" FontWeight="Bold" FontSize="16" Margin="10,10,10,20" TextAlignment="Center"/>
            <Button Content="Új családfa"  Padding="5" Margin="5,5,5,10"/>
            <Button Content="Megnyitás" Margin="5,5,5,10" Padding="5"/>
            <Button Content="Mentés" Margin="5,5,5,10" Padding="5"/>
            <Button Content="Eszközök" Margin="5,5,5,10" Padding="5"/>
            <Button Content="Nyomtatás" Margin="5,5,5,10" Padding="5"/>
            <Button Content="Segítség" Margin="5,5,5,10" Padding="5"/>
            <Button Content="Kijelentkezés" Margin="5,5,5,10" Padding="5" Click="Kijelentkezes_Click"/>
        </StackPanel>

        <!-- KÖZÉPSŐ rész (pl. családfa) -->
        <Grid Grid.Column="1" Grid.RowSpan="3" >
            <Canvas x:Name="CsaladfaVaszon" Background="White"/>
        </Grid>

        <!-- JOBB oldali panel -->
        <StackPanel Grid.Column="2"  Margin="5,0,0,0"  Background="#EEE">
            <WrapPanel Margin="0,0,0,10">
                <TextBlock Text="Keresztnév" FontWeight="Bold" FontSize="14" Width="80"/>
                <Button>Töröl</Button>
                <Button>Előző</Button>
                <Button Width="73">Következő</Button>
            </WrapPanel>
            <Grid  Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Image Source="pack://application:,,,/Images/account-grey-icon.png" Grid.Column="0" Grid.Row="0" Margin="20,0,12,-16" Grid.RowSpan="2"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="Vnév K.név" TextAlignment="Center"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="Kor" TextAlignment="Center"/>
            </Grid>



            <TextBlock Text="Személy szerkesztése" FontWeight="Bold" Margin="10,10,0,5"/>
            <WrapPanel>
                <Button Content="Részletek" Width="70" Margin="10,5,12,5"/>
                <Button Content="Hivatkozások" Margin="0,5,5,5"/>
            </WrapPanel>
            <WrapPanel>
                <Button Content="Kapcsolatok" Margin="10,5,5,5"/>
                <Button Content="Mellékletek" Margin="5"/>
            </WrapPanel>
            <Button Content="Fotók és történet" Margin="10,5,5,5" Width="120" HorizontalAlignment="Left"/>
            <TextBlock Text="Kapcsolat létrehozása" FontWeight="Bold" Margin="10,10,10,0" HorizontalAlignment="Left" TextAlignment="Center"/>
            <ComboBox Margin="10,5,5,5" Width="156" HorizontalAlignment="Left" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="-- Válassz egy elemet --" IsEnabled="False"/>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Apa hozzáadása"
                        Click="ApaHozzaadasa_Click"
                        Padding="5" Margin="0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Anya hozzáadása"
                         Click="AnyaHozzaadasa_Click"
                         Padding="5" Margin="0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Lány testvér hozzáadása"
                        Click="LanyTestverHozzaadasa_Click"
                        Padding="5" Margin="0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Fiú testvér hozzáadása"
                        Click="FiuTestverHozzaadasa_Click"
                        Padding="5" Margin="0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Partner/Házastárs hozzáadása"
                        Click="PartnerHozzaadasa_Click"
                        Padding="5" Margin="0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Fia hozzáadása"
                        Click="FiaHozzaadasa_Click"
                        Padding="5" Margin="0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Lánya hozzáadása"
                        Click="LanyaHozzaadasa_Click"
                        Padding="5" Margin="0"/>
                    </StackPanel>
                </ComboBoxItem>
                <ComboBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="➕ Nem kapcsolódó személy hozzáadása"
                        Click="NemKapcsolodoHozzaadasa_Click"
                        Padding="5" Margin="0"/>
                    </StackPanel>
                </ComboBoxItem>
            </ComboBox>
            <WrapPanel Margin="0,10,0,5">
                <TextBlock Text="Család" FontWeight="Bold" Margin="10,5,20,5"/>
                <Button Content="Család adatok" Width="128"/>
            </WrapPanel>

            <WrapPanel Margin="0,5,0,5">
                <TextBlock Text="Szűrés" FontWeight="Bold" Margin="10,5,20,5"/>
                <TextBox Width="140" />
            </WrapPanel>



            <ListView Margin="5" Height="72" Width="237">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Név"/>
                        <GridViewColumn Header="Születési dátum"/>
                        <GridViewColumn Header="Él-e"/>
                        <GridViewColumn Header="Kor"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
